<h2><%= @play.title %></h2>
<h3><%= @play.director %></h3>
<h4><%= @play.category.name %></h4>
<p><%= @play.description %></p>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @play.user == current_user %>
      <%= link_to "Edit", edit_play_path(@play) %>
      <%= link_to "Delete", play_path(@play), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
    <% end %>
  <% end %>
</div>

