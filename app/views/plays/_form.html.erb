<%= simple_form_for @play, html: { multipart: true } do |f| %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= select_tag(:category_id, options_for_select(@categories), prompt: 'Select Category') %>
  <%= f.input :title, label: 'Play Title' %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>
